{
	"name": "vscode-clle",
	"displayName": "CL",
	"description": "CLLE language tools",
	"author": "IBM",
	"version": "1.1.9",
	"publisher": "IBM",
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"url": "https://github.com/IBM/vscode-clle"
	},
	"icon": "media/logo.png",
	"keywords": [
		"multi-root ready",
		"ibmi",
		"as400",
		"iseries"
	],
	"engines": {
		"vscode": "^1.50.0"
	},
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:cl"
	],
	"extensionDependencies": [
		"halcyontechltd.code-for-ibmi"
	],
	"main": "./out/extension",
	"contributes": {
		"snippets": [
			{
				"path": "./schemas/cl.code-snippets",
				"language": "cl"
			}
		],
		"commands": [
			{
				"command": "vscode-clle.runSelected",
				"title": "Run selected CL command",
				"category": "CLLE"
			},
			{
				"command": "vscode-clle.syntax.checkDocument",
				"title": "Check CL Syntax",
				"category": "CLLE",
				"enablement": "code-for-ibmi:connected == true && vscode-clle.syntax.checkerAvailable == true && vscode-clle.syntax.checkerRunning != true",
				"icon": "$(check-all)"
			},
			{
				"command": "vscode-clle.viewFullDocumentation",
				"title": "View Full Documentation",
				"category": "CLLE"
			}
		],
		"keybindings": [
			{
				"command": "vscode-clle.runSelected",
				"key": "ctrl+r",
				"mac": "cmd+r",
				"when": "editorLangId == cl"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "vscode-clle.runSelected",
					"when": "code-for-ibmi:connected && editorLangId === cl"
				},
				{
					"command": "vscode-clle.viewFullDocumentation",
					"when": "never"
				}
			],
			"editor/title": [
				{
					"command": "vscode-clle.syntax.checkDocument",
					"when": "editorLangId == cl && code-for-ibmi:connected == true",
					"group": "navigation"
				}
			]
		},
		"configuration": [
			{
				"id": "vscode-clle.syntax",
				"title": "CL Syntax Options",
				"properties": {
					"vscode-clle.syntax.checkOnOpen": {
						"type": "boolean",
						"description": "If enabled, will check the syntax of the CL file when it is opened",
						"default": false
					},
					"vscode-clle.syntax.checkOnEdit": {
						"type": "boolean",
						"description": "Whether the syntax checker should run automatically when the document is edited",
						"default": true
					},
					"vscode-clle.syntax.checkInterval": {
						"type": "number",
						"description": "Time between editing (ms) and sending a request to syntax check on the server",
						"default": 1500
					}
				}
			}
		]
	},
	"scripts": {
		"package": "vsce package",
		"vscode:prepublish": "npm run webpack",
		"lang:setup": "npm run lang:build && cd server && rimraf node_modules && npm i",
		"lang:build": "cd language && tsc -b",
		"lang:test": "cd language && npm run test",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../language && npm i && npm run build && cd ../server && npm install && cd ..",
		"test": "npm run lang:test",
		"clean": "rimraf out && rimraf language/out && rimraf client/out && rimraf server/out",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && npm run lang:setup && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js"
	},
	"devDependencies": {
		"@halcyontech/vscode-ibmi-types": "^2.16.3",
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"esbuild": "0.18.15",
		"eslint": "^8.13.0",
		"merge-options": "^3.0.4",
		"mocha": "^9.2.1",
		"rimraf": "^3.0.2",
		"semver": "^7.3.5",
		"ts-loader": "^9.3.1",
		"tsx": "^3.11.0",
		"typescript": "^4.8.4",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}